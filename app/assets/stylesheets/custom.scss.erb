h1, h2, h3, h4, h5, h6 {
  color: $font-color;
  font-family: "Inconsolata", "Helvetica Neue", Helvetica, sans-serif;
}

body {
	font-family: 'Inconsolata',Helvetica,Arial,sans-serif;
	font-weight: 400;
	background-color:#111;
	// max-width: 960px;
	margin: auto;
	color: $font-color;
