.body {
	font-family: 'Inconsolata',Helvetica,Arial,sans-serif;
	font-weight: 400;
	// background-color:rgba(0,0,0,0.02);
	max-width: 960px;
	margin: auto;
}

.full-width{
	width: 100%;
	max-height: 30em;
	margin: 1em auto;
	&.hero{
		min-width: 30em;
		font-family: 'Inconsolata', Helvetica;
		background: url(<%= asset_path 'mountains-horizon.jpg' %>) repeat left -100px fixed;
		background-size: 100%;
		box-shadow:inset 0px 0px 0 2000px rgba(0,0,0,0.15);
		height:80%;
		@media (max-width: 550px){
			background: url(<%= asset_path 'mountains-horizon.jpg' %>) no-repeat left center -10px fixed;
			min-width: 400px;
			vertical-align: top;
		}
		@media (min-width: 651px) and (max-width: 810){
			height: 25em;
			background: url(<%= asset_path 'mountains-horizon.jpg' %>) no-repeat left center -10px fixed;
		}
		#intro-text {
			color: #FFF;
			@media(max-width: 650px){
				color: black;
				font-size: 2em;
			}
			@media(min-width: 651px) and (max-width: 840){
				font-size: 2em;
			}
			@media(min-width: 841px){
				font-size: 3em;
			}
			p {
				line-height: 120%;
			}
		}

	}
}

.project {
	font-family: 'Inconsolata';
}

.button{
	font-family: 'Inconsolata',Helvetica,Arial,sans-serif;
	display: inline;
	padding: .4em .6em;
	margin: 1.5em 1em;
	background-color: $accent1;
	color: $font-color;
	border: none;
	// border: 1px rgba(250, 250, 250,.5) solid;
	border-radius: 3px;
}

.button-group li{
	padding-top: 1em;
	margin-top: 1em;
	a {
	border: none !important;
	color: $font-color;
	&:hover{
		color: #111;
		background-color: $accent1;
		border-color: $accent1;
		box-shadow: 0 0 10px $accent1;
		transition: background-color 1s,
								border-color 1s,
								color 1s;
		}
	}
}
.button-group{
	float:none;
}
@media only screen and (min-width: 40.063em) {
	.button-group{
	float:right;
}
}
.namelogo{
	a {color: $font-color - #222 !important;}
	padding: 20px 10px 0px 10px;
	&:hover {
		color: #000;
		font-size: 2em;
		text-shadow: 1px 1px 5px $accent1;
		transition: text-shadow 1s,
								color 2s;
	}
	font-size:1.5em;
	font-weight:600;
	text-align:center;
	@media only screen and (min-width: 40.063em) {
		// padding-bottom:20px;
	}
	@media only screen and (min-width: 40.063em){
		font-size: 16px;
		text-align: left;
	}
	@media only screen and (min-width: 64.063em) {
		font-size:24px;
		text-align:left;
	}
}

@keyframes color-change {
  0%   {
  	color: none;
  }
  20%  {
  	color: red;
  }
  40%  {
  	color: blue;
  }
  60% {
  	color: green;
  }
  80% {
  	color: yellow;
  }
  100%{
  	color: none;
  }
}

#intro-text {
	animation-name: color-change;
	animation-duration: 5s;
	animation-iteration-count: 2;
	padding-top:40%;
	color: #fff;
	text-align: right;
	@media only screen and (min-width: 40.063em) {
		padding-top:25%;
	}
	@media only screen and (min-width: 64.063em) {
		padding-top:18%;
	}
	p {
		font-family: 'Nothing You Could Do', cursive;
		font-size: 1em;
	}
}

.about,.work,.contact{
	padding:2em 0 0 0;
	margin: 1em;
}

@keyframes rotation {
	0% {
		-ms-transform: rotate(-90deg); /* IE 9 */
    -webkit-transform: rotate(-90deg); /* Chrome, Safari, Opera */
    transform: rotate(-90deg);
	}
	50% {
		-ms-transform: rotate(20deg); /* IE 9 */
    -webkit-transform: rotate(20deg); /* Chrome, Safari, Opera */
    transform: rotate(20deg);
	}
	100% {
		-ms-transform: rotate(0deg); /* IE 9 */
    -webkit-transform: rotate(0deg); /* Chrome, Safari, Opera */
    transform: rotate(0deg);
	}
}

.about {
	img {
		width:250px;
		height:250px;
		border-radius:150px;
		-webkit-border-radius:150px;
		-moz-border-radius:150px;
		&.rotate {
			-webkit-animation-name: rotation;
			animation-name: rotation;
			animation-duration: 3s;
			-webkit-animation-duration: 3s;
			animation-iteration-count: 1;
			-webkit-animation-iteration-count: 1;
		}
		&:hover {
			-webkit-transform: scale(1.4);
			-ms-transform: scale(1.4);
			transform: scale(1.4);
		}
	}

	#speakerbox {
		text-align: center;
		font-size: 1.5em;
		color: $accent1;
		margin-top: 3em;
	}
}

.work img:hover{opacity:0.5;-webkit-transition:0.3s ease;-moz-transition:0.3s ease;-ms-transition:0.3s ease;-o-transition:0.3s ease;transition:0.3s ease;}
