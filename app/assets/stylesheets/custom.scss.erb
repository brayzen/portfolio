@import url(https://fonts.googleapis.com/css?family=Inconsolata:400,700|Nothing+You+Could+Do);


.alert-box {
    color: #000;
    background: rgba(0,255,220,.6);
 }

h1, h2, h3, h4, h5, h6 {
  color: #222222;
  font-family: "Inconsolata", "Helvetica Neue", Helvetica, sans-serif;
}

body {
	font-family: 'Inconsolata',Helvetica,Arial,sans-serif;
	font-weight: 400;
	background-color:rgba(0,0,0,0.02);
	// max-width: 960px;
	margin: auto;
}

.body {
	font-family: 'Inconsolata',Helvetica,Arial,sans-serif;
	font-weight: 400;
	// background-color:rgba(0,0,0,0.02);
	max-width: 960px;
	margin: auto;
}

.hero{
	font-family: 'Inconsolata', Helvetica;
	background: url(<%= asset_path 'mountains-horizon.jpg' %>) repeat left -225px;
	background-size: 100%;
	box-shadow:inset 0px 0px 0 2000px rgba(0,0,0,0.15);
	height:80%;
}

.project {
	font-family: 'Inconsolata';
}

.button{
	font-family: 'Inconsolata',Helvetica,Arial,sans-serif;
	display: inline;
	padding: .4em .6em;
	margin: 1.5em 1em;
	background-color: #31C1F1;
	border: 1px rgba(0,0,0,.5) solid;
	border-radius: 3px;
}
.button-group li{
	padding-top:3%;
	margin-top: 20px;
}
.button-group a{
	color:rgba(0,0,0,1);
	background-color:transparent;
}
.button-group a:hover{
	color:rgba(0,0,0,0.4);
	background-color:transparent;
}
.button-group{
	float:none;
}
@media only screen and (min-width: 40.063em) {
	.button-group{
	float:right;
}
}
.namelogo{
	padding:20px 10px 0px 10px;

}

@media only screen and (min-width: 40.063em) {
	.namelogo{
		padding-bottom:20px;
	}
}

.namelogo h1{
	font-size:1.5em;
	font-weight:600;
	text-align:center;
}

@media only screen and (min-width: 40.063em)
	{.namelogo h1{
		font-size:16px;
		text-align:left;}
	}

@media only screen and (min-width: 64.063em) {
	.namelogo h1{
		font-size:24px;
		text-align:left;
	}
}


.intro-text{
	padding-top:40%;
	color:rgba(255,255,255,1);
	text-align: right;
}
@media only screen and (min-width: 40.063em) {.intro-text{padding-top:25%;}
}
@media only screen and (min-width: 64.063em) {.intro-text{padding-top:18%;}
}
.intro-text p{
	font-family: 'Nothing You Could Do', cursive;
	font-size: 22px;
}
.about,.work,.contact{
	padding:2em 0 0 0;
	margin: 1em;
}
.about img{width:250px;height:250px;border-radius:150px;-webkit-border-radius:150px;-moz-border-radius:150px;}
.work img:hover{opacity:0.5;-webkit-transition:0.3s ease;-moz-transition:0.3s ease;-ms-transition:0.3s ease;-o-transition:0.3s ease;transition:0.3s ease;}
.work li{height:140px;overflow:hidden;}
hr{
	border:0;
	height:1px;
	background-image:-webkit-linear-gradient(left,rgba(0,0,0,0),rgba(0,0,0,0.75),rgba(0,0,0,0));
	background-image:-moz-linear-gradient(left,rgba(0,0,0,0),rgba(0,0,0,0.75),rgba(0,0,0,0));
	background-image:-ms-linear-gradient(left,rgba(0,0,0,0),rgba(0,0,0,0.75),rgba(0,0,0,0));
	background-image:-o-linear-gradient(left,rgba(0,0,0,0),rgba(0,0,0,0.75),rgba(0,0,0,0));
	opacity:0.8;
}

footer{
	padding:80px 0 10px 0;
}

footer a:hover{
	color:rgba(0,0,0,0.4);
	background-color:transparent;
}

h3.project {
	font-family: 'Inconsolata';
}

.resume {
	padding: 4em;
	max-width: 1000px;
	margin: auto;

}

a:hover{
	color:rgba(0,0,0,0.4);
	background-color:transparent;
}

.project {
	list-style-type: none;
	display: inline;
}
.crud {
	display: inline;
	padding: .4em .6em;
	background-color: #31C1F1;
	border: 1px rgba(0,0,0,.5) solid;
	border-radius: 3px;
	a:hover{
		background-color: none;
	}
}

p {
	font-family: "Inconsolata", Helvetica;
}

.inlineTitle {
	font-size: 3em;
	font-weight: 400;
	line-height: 1em;
}

.inlineBody {
	font-size: 2em;
	font-weight: none;
}

.log-button {
	// background-color: #31C1F1;
	color: #f44;
	font-family: Inconsolata;
	padding: 5px 10px;
	border: 1px rgba(0,0,0,.5) solid;
	border-radius: 3px;
}

.article-title {
	font-family: Inconsolata;
	font-weight: 500;
	font-size: 2em;
}

.work ul li img{
	border: 1px rgba(0,0,0,.5) solid;
}

.image_medium {
	border: 1px rgba(0,0,0,.8) solid;
	max-width: 400px;
}

.project-body {
	max-width: 960px;
	word-wrap: break-word;
}

.single-button {
	font-family: 'Inconsolata',Helvetica,Arial,sans-serif;
	display: inline;
	padding: .4em .6em;
	margin: 1.5em 1em 3em .2em;
	background-color: #31C1F1;
	border: 1px rgba(0,0,0,.5) solid;
	border-radius: 3px;
}
