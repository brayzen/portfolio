@keyframes fade-in-out {
	0% {
		background: lime;
		opacity: 1%;
	}
	50% {
		background: lime;
		opacity: 100%;
	}
	100% {
		background: lime;
		opacity: 1%;
	}
}
.alert-box {
		// position: fixed;
		z-index: 1000;
		animation-name: fade-in-out;
		animation-duration: 10s;
		text-align: center;
    color: #000;
