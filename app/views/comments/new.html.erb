<h1>Create a Comment</h1>
<%= form_for [@article, @comment] do |f| %>
  <div class="field">
    <%= f.label :post %><br />
    <%= f.text_field :post %>
  </div>
  <% if current_user.editor? %>
    <div class="field">
      <%= f.label :verified %><br />
      <%= f.check_box :verified %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
