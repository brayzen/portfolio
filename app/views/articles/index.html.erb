<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<div class="container">
  <div class="large-4 columns header">
    <div class="row">
      <!-- <th>Title</th>
      <th>Body</th> -->
      <div class="small-9 columns">
        <h4> <em><b>Title</b></em> | Body </h4>
      </div>
    </div>
  </div>

  <div>
    <% @articles.each do |article| %>
      <div class="row">
        <div class="small-9 columns article-title"><strong><%= article.title %></strong></div>
        <div class="small-9 columns"><%= article.body %></div>
        <div class="small-1 columns"><%= link_to 'Show', article, class: "button radius" %></div>
        <% if policy(article).update? %>
          <div class="small-1 columns"><%= link_to 'Edit', edit_article_path(article), class: "button radius" %></div>
        <% end %>
        <% if policy(article).destroy? %>
          <div class="small-1 columns"><%= link_to 'Destroy', article, class: "button radius", method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<br>

<% if policy(Article).create? %>
  <%= link_to 'New Article', new_article_path %>
<% end %>

