<p id="notice"><%= notice %></p>

<p id="status">
  <b>Status:</b>
  <%= @article.published? ? "Published" : "Unpublished" %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p id="author">
  <b>By:</b>
  <%= @article.author.email %>
</p>

<hr>
<h3>Comments</h3>
<% @comments.each do |comment| %>
<p>
  <strong>Title:</strong>
  <%= comment.post %>
  by: <%= comment.user_id %>
</p>
<% end %>

<hr>
<h2>Create Comment</h2>
<%= form_for article_comments(@comment) do |f| %>
  <div class="field">
    <%= f.label :post %><br />
    <%= f.text_field :post %>
  </div>
  <div class="field">
    <%= f.label :verified %><br />
    <%= f.boolean :verified %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
