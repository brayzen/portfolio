      <div class="small-3 columns">
        <%= f.label :published, class: "right inline", title: "Is the article published?", data: {tooltip: true } %>
      </div>

      <div class="small-9 columns">
        <%= f.check_box :published %>
      </div>
    </div>
  <% end %>

